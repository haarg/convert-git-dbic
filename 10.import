#!/bin/sh

BASE_DIR=$(cd $(dirname $0); pwd)

git init
git config svn.authorsfile $BASE_DIR/authors

git svn init \
    -TDBIx-Class/0.08/trunk \
    -ttags/DBIx-Class \
    -tDBIx-Class/tags \
    -bbranches/DBIx-Class \
    -bDBIx-Class/0.08/branches \
    -bDBIx-Class/0.08/branches/_abandoned_but_possibly_useful \
    -bbranches \
    --prefix=svn/ \
    --rewrite-root=http://dev.catalyst.perl.org/repos/bast \
    file://$BASE_DIR/svn-mirror

git svn fetch --authors-prog=$BASE_DIR/author-generate

git config --unset svn-remote.svn.rewriteRoot
git config svn-remote.svn.url http://dev.catalyst.perl.org/repos/bast
GIT_CONFIG=.git/svn/.metadata git config svn-remote.svn.reposRoot http://dev.catalyst.perl.org/repos/bast

git svn fetch --authors-prog=$BASE_DIR/author-generate

