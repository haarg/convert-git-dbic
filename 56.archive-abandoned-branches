#!/usr/bin/env perl
use strict;
use warnings;

use Cwd qw(realpath);
use File::Basename;
my $BASE_DIR = dirname realpath __FILE__;

my $branches = <<'END_BRANCHES';
    manual
    mysql_grant_privileges_sketch
    prepare_cached
    test_class
END_BRANCHES

my @branches = split /\n/, $branches;
for ( @branches ) {
    s/#.*//;
    s/^\s+//;
    s/\s$//;
    next
        if $_ eq '';
    system "git branch -m $_ abandoned/$_";
}

